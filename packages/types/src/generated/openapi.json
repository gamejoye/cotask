    }
  ],
  "servers": [],
  "components": {
    "schemas": {
      "ApiBaseResult": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number",
            "description": "Http状态码",
            "examples": [200, 201, 404, 403]
          },
          "message": {
            "type": "string",
            "description": "Http内容的简要概述",
            "examples": ["用户权限不足", "未找到资源"]
          }
        },
        "required": ["statusCode", "message"]
      },
      "UserVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "用户id",
            "example": 1
          },
          "username": {
            "type": "string",
            "description": "用户名",
            "example": "gamejoye"
          },
          "email": {
            "type": "string",
            "description": "用户邮箱",
            "example": "gamejoye@gmail.com"
          },
          "avatarUrl": {
            "type": "string",
            "description": "用户头像",
            "example": "https://avatars.githubusercontent.com/u/88575063?v=4"
          },
          "createdAt": {
            "type": "string",
            "description": "创建时间",
            "example": "2022-01-02 00:00:00"
          },
          "updatedAt": {
            "type": "string",
            "description": "更新时间",
            "example": "2022-01-01 00:00:00"
          }
        },
        "required": ["id", "username", "email", "avatarUrl", "createdAt", "updatedAt"]
      },
      "LoginVo": {
        "type": "object",
        "properties": {
          "user": {
            "description": "用户信息",
            "allOf": [
              {
                "$ref": "#/components/schemas/UserVo"
              }
            ]
          },
          "token": {
            "type": "string",
            "example": "token",
            "description": "用户token"
          }
        },
        "required": ["user", "token"]
      },
      "LoginUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "gamejoye@gmail.com",
            "description": "用户邮箱"
          },
          "password": {
            "type": "string",
            "example": "123456..",
            "description": "用户密码"
          }
        },
        "required": ["email", "password"]
      },
      "RegisterUserDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "gamejoye",
            "description": "用户名"
          },
          "email": {
            "type": "string",
            "example": "gamejoye@gmail.com",
            "description": "用户邮箱"
          },
          "password": {
            "type": "string",
            "example": "123456..",
            "description": "用户密码"
          },
          "code": {
            "type": "string",
            "example": "123456",
            "description": "验证码"
          }
        },
        "required": ["username", "email", "password", "code"]
      },
      "CircleTimeOptions": {
        "type": "object",
        "properties": {
          "circleTime": {
            "type": "number",
            "example": 1,
            "description": "循环周期"
          },
          "days": {
            "example": [1, 2, 3],
            "description": "循环周期内选择的日期，如果循环周期无法选择日期，传递空数组就好",
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        },
        "required": ["circleTime", "days"]
      },
      "FrequencyOption": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "example": "DAILY",
            "enum": ["DAILY", "WEEKLY", "MONTHLY", "YEARLY"],
            "description": "频率类型（不包括 NONE）"
          },
          "options": {
            "description": "循环周期配置",
            "allOf": [
              {
                "$ref": "#/components/schemas/CircleTimeOptions"
              }
            ]
          }
        },
        "required": ["type", "options"]
      },
      "TodoVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1,
            "description": "todo唯一id"
          },
          "title": {
            "type": "string",
            "example": "Learn React",
            "description": "todo标题"
          },
          "description": {
            "type": "string",
            "example": "一周之内学会如何使用React写一个应用",
            "description": "todo描述"
          },
          "priority": {
            "type": "string",
            "example": "HIGH",
            "enum": ["HIGH", "MEDIUM", "LOW"],
            "description": "todo优先级",
            "nullable": true
          },
          "frequency": {
            "type": "string",
            "example": "NONE",
            "enum": ["NONE", "DAILY", "WEEKLY", "MONTHLY", "YEARLY"],
            "description": "todo频率"
          },
          "frequencyOption": {
            "example": null,
            "description": "todo频率选项",
            "nullable": true,
            "allOf": [
              {
                "$ref": "#/components/schemas/FrequencyOption"
              }
            ]
          },
          "dueDate": {
            "type": "string",
            "example": "2022-01-03",
            "description": "todo截止日期"
          },
          "completed": {
            "type": "boolean",
            "example": false,
            "description": "todo是否完成"
          },
          "createdBy": {
            "description": "创建者信息",
            "allOf": [
              {
                "$ref": "#/components/schemas/UserVo"
              }
            ]
          },
          "createdAt": {
            "type": "string",
            "example": "2022-01-01 00:00:00",
            "description": "创建时间"
          },
          "updatedAt": {
            "type": "string",
            "example": "2022-01-02 00:00:00",
            "description": "更新时间",
            "nullable": true
          }
        },
        "required": [
          "id",
          "title",
          "description",
          "priority",
          "frequency",
          "frequencyOption",
          "dueDate",
          "completed",
          "createdBy",
          "createdAt",
          "updatedAt"
        ]
      },
      "GetTodosVo": {
        "type": "object",
        "properties": {
          "total": {
            "type": "number",
            "example": 1,
            "description": "待办事项总条数"
          },
          "data": {
            "description": "待办事项数据",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TodoVo"
            }
          }
        },
        "required": ["total", "data"]
      },
